extends layout

block content
  h1 Palindrome Checker

  form(method = "POST" action = "/")
    label(for="userText") Enter your text here:
    br
    input(type = "text" id = "userText" name = "userText" value = `${phrase}`)
    br
    br
    button(type = "submit") Submit
    div.bottom
      h2 examples:
      p 101
      p taco cat
      p kayak
      div
    if message
      p=message